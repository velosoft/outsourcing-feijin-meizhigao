{
  "easycom": {
    /*///---- Pages-Tool --  合并自： pages-config/easycom.json ----*/
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    /*///---- Pages-Tool --  合并自： pages-config/pages-all.json ----*/ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/tabBar/home",
      "style": {
        "navigationStyle": "custom",
        "backgroundColor": "#1C6BFF",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/tabBar/shop",
      "style": {
        "navigationStyle": "custom",
        "backgroundColor": "#1C6BFF",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/tabBar/cart",
      "style": {
        "navigationStyle": "custom",
        "backgroundColor": "#1C6BFF",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/tabBar/personal",
      "style": {
        "navigationStyle": "custom",
        "backgroundColor": "#1C6BFF",
        "enablePullDownRefresh": false
      }
    }
  ],
  "globalStyle": {
    /*///---- Pages-Tool --  合并自： pages-config/globalStyle.json ----*/
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "飞进",
    "navigationStyle": "custom",
    "navigationBarBackgroundColor": "#F1F5F8",
    "backgroundColor": "#F1F5F8"
  },
  "tabBar": {
    /*///---- Pages-Tool --  合并自： pages-config/tabBar.json ----*/
    "navigationStyle": "custom",
    "backgroundColor": "#1C6BFF",
    "enablePullDownRefresh": true,
    "color": "#bbbbbb",
    "selectedColor": "#000000",
    "borderStyle": "white",
    "backgroundColor": "#ffffff",
    "height": "60px",
    "fontSize": "12px",
    "iconWidth": "12px",
    "spacing": "3px",
    "list": [
      {
        "pagePath": "pages/tabBar/home",
        "iconPath": "",
        "selectedIconPath": "",
        "text": "首页"
      },
      {
        "pagePath": "pages/tabBar/shop",
        "iconPath": "",
        "selectedIconPath": "",
        "text": "商城"
      },
      {
        "pagePath": "pages/tabBar/cart",
        "iconPath": "",
        "selectedIconPath": "",
        "text": "购物车"
      },
      {
        "pagePath": "pages/tabBar/personal",
        "iconPath": "",
        "selectedIconPath": "",
        "text": "我的"
      }
    ]
  }
}
